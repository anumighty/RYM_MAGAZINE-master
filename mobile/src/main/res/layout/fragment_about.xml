<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Here is the About Fragment"
        android:id="@+id/textViewStarredFragment"
        android:layout_marginBottom="109dp"
        android:layout_above="@+id/buttonFragmentStarred"
        android:layout_centerHorizontal="true" />

    <Button
        android:textColor="@android:color/white"
        android:backgroundTint="#18b40a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To be Worked on Later"
        android:id="@+id/buttonFragmentStarred"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>