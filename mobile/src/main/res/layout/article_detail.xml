<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

              <include layout="@layout/view_toolbar"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/rounded_bg">
                <ImageView
                    android:id="@+id/imageHeadFull"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_image3"
                    android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/title"
                android:layout_below="@+id/imageHeadFull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="#c7221c"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textIsSelectable="true"
                android:text=" YOU BROKE MY HEART, TISSUE WON'T FIX IT"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/writer"
                android:layout_below="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Written By: Wahab, Anuoluwapo"
                android:textIsSelectable="true"
                android:paddingBottom="5dp"
                android:textColor="#ffe18b28"
                android:gravity="center_horizontal"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignBottom="@+id/imageHeadFull">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:background="#000"
                    android:alpha="0.2"/>
            <LinearLayout
                android:id="@+id/like"
                android:paddingTop="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/like1"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/like"/>

                <TextView
                    android:id="@+id/like3"
                    android:layout_toRightOf="@+id/like2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/comments"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/like"
                android:paddingLeft="25dp">
                <ImageView
                    android:id="@+id/comment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comment"
                    android:paddingTop="7dp"
                    android:layout_gravity="right"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/comment2"
                    android:layout_toRightOf="@+id/comment2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff"
                    android:paddingTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/whatsapp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp">
                <ImageView
                    android:id="@+id/whatsapp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/whatsapp"
                    android:paddingTop="7dp"
                    android:layout_gravity="right"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/whatsapp2"
                    android:layout_toRightOf="@+id/whatsapp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff"
                    android:paddingTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/facebook"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/whatsapp"
                android:paddingRight="25dp">
                <ImageView
                    android:id="@+id/facebook1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/facebook"
                    android:paddingTop="7dp"
                    android:layout_gravity="right"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/facebook2"
                    android:layout_toRightOf="@+id/facebook1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff"
                    android:paddingTop="10dp"/>
            </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="#f2f1f1"
                android:padding="10dp">


                <TextView
                    android:id="@+id/content1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:lineSpacingMultiplier="1.3"/>

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/content2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:lineSpacingMultiplier="1.3"/>

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/content3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:lineSpacingMultiplier="1.3"/>

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/content4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:lineSpacingMultiplier="1.3"/>

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/content5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:lineSpacingMultiplier="1.3"/>

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


